{
  "name": "typescript-npm-cli-template",
  "version": "0.0.0-development",
  "description": "A template for creating npm CLI tools using TypeScript and VSCode",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "start": "TS_NODE_FILES=true ts-node ./src/main.ts",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "author": {
    "name": "Felix Sebastian",
    "email": "hi@felixsebastian.dev",
    "url": "https://github.com/felixsebastian"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "boilerplate",
    "cli",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "dependencies": {
    "@types/lodash": "^4.17.7",
    "commander": "^7.2.0",
    "enquirer": "^2.4.1",
    "lodash": "^4.17.21",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.2.0",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  }
}
